{
    "$schema": "/etc/xdg/swaync/configschema.json",
    "positionX": "right",
    "positionY": "top",
    "cssPriority": "user",
    "control-center-width": 350,
    "fit-to-screen": true,

    "notification-window-width": 400,
    "notification-icon-size": 40,
    "notification-body-image-height": 500,
    "notification-body-image-width": 500,
    "notification-inline-replies": true,
    "notification-2fa-action": false,
  
    "timeout": 4,
    "timeout-low": 4,
    "timeout-critical": 6,
    
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,

    "widgets": [
      "mpris",
      "volume",
      "title",
      "notifications",
      "buttons-grid"
    ],
   
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear"
        },

        "volume": {
            "label": "",
            "show-per-app": true
        },

        "mpris": {
            "image-size": 128,
            "image-radius": 12,
            "autohide": false,
            "blacklist": [ "org.mpris.MediaPlayer2.playerctld"]
        },

        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "hyprctl dispatch exec kitty -- -e htop ; swaync-client -cp"
                },
                {
                    "label": "",
                    "command": "hyprctl dispatch exec nwg-look ; swaync-client -cp"
                },
                {
                    "label": "",
                    "command": ""
                },
                {
                    "label": "",
                    "command": ""
                }
            ]
        }
    }
  }
