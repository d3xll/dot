{
  "material-code.colors": {
    // Основные UI-цвета (точно по рекомендациям расширения)
    "primary": "{{colors.primary.default.hex}}",
    "primaryForeground": "{{colors.on_primary.default.hex}}",
    "foreground": "{{colors.on_surface.default.hex}}",
    "mutedForeground": "{{colors.on_surface_variant.default.hex}}",
    "background": "{{colors.surface.default.hex}}",
    "card": "{{colors.surface_container.default.hex}}",
    "popover": "{{colors.surface_container_high.default.hex}}",
    "hover": "{{colors.surface_container_highest.default.hex}}",
    "border": "{{colors.outline_variant.default.hex}}",

    // Тональная кнопка / тултип
    "secondary": "{{colors.secondary_container.default.hex}}",
    "secondaryForeground": "{{colors.on_secondary_container.default.hex}}",

    // Ошибки
    "error": "{{colors.error.default.hex}}",
    "errorForeground": "{{colors.on_error.default.hex}}",

    // Success и warning нет в базовой палитре matugen → используем tertiary и secondary_container
    // (tertiary часто бывает зелёным/бирюзовым, secondary_container — жёлтым/оранжевым)
    "success": "{{colors.tertiary.default.hex}}",
    "warning": "{{colors.secondary_container.default.hex}}",

    // Синтаксис-хайлайтинг (самое вкусное)
    "syntax.comment": "{{colors.on_surface_variant.default.hex}}",           // Приглушённый для комментариев
    "syntax.string": "{{colors.tertiary.default.hex}}",                     // Яркий акцент для строк
    "syntax.keyword": "{{colors.primary.default.hex}}",                     // Ключевые слова — главный акцент
    "syntax.variable": "{{colors.on_surface.default.hex}}",                 // Переменные — обычный foreground
    "syntax.attribute": "{{colors.tertiary.default.hex}}",                  // Атрибуты HTML/CSS
    "syntax.property": "{{colors.secondary.default.hex}}",                  // Свойства объектов и CSS
    "syntax.function": "{{colors.secondary.default.hex}}",                  // Функции и методы
    "syntax.constant": "{{colors.tertiary.default.hex}}",                   // Константы, числа, типы

    // Радужные скобки (bracket pair colorization)
    "syntax.bracket1": "{{colors.primary.default.hex}}",
    "syntax.bracket2": "{{colors.secondary.default.hex}}",
    "syntax.bracket3": "{{colors.tertiary.default.hex}}",
    "syntax.bracket4": "{{colors.error.default.hex}}"                       // Глубокий nesting — красный для заметности
  }
}